{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "{Title}",
              "wrap": true,
              "size": "Medium",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "{Info}",
              "wrap": true,
              "spacing": "None",
              "size": "Small"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "{StatusImage}"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "{LeftBar}",
                  "horizontalAlignment": "Center",
                  "width": "3px"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{LeftText}",
                  "wrap": true,
                  "weight": "Bolder"
                },
                {
                  "type": "TextBlock",
                  "text": "{LeftDate}",
                  "spacing": "None",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "{LeftTimeSpan}",
                  "wrap": true,
                  "spacing": "None"
                },
                {
                  "type": "TextBlock",
                  "text": "{LeftHours} hours {LeftMin} minutes",
                  "spacing": "None",
                  "wrap": true
                }
              ],
              "horizontalAlignment": "Left"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": 1
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "{SwapIcon}"
                }
              ]
            },
            {
              "type": "Column",
              "width": 4
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "{RightBar}",
                  "horizontalAlignment": "Center"
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{RightText}",
                  "wrap": true,
                  "weight": "Bolder"
                },
                {
                  "type": "TextBlock",
                  "text": "{RightDate}",
                  "spacing": "None",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "{RightTimeSpan}",
                  "wrap": true,
                  "spacing": "None"
                },
                {
                  "type": "TextBlock",
                  "text": "{RightHours} hours {RightMin} minutes",
                  "spacing": "None",
                  "wrap": true
                }
              ],
              "horizontalAlignment": "Left"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "{txt_Updated} :",
              "value": "{Updated}"
            },
            {
              "title": "{txt_Note} :",
              "value": "{Note}"
            }
          ]
        }
      ]
    }
  ],
  "type": "AdaptiveCard",
  "version": "1.0"
}