{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "Welcome!"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "horizontalAlignment": "Left",
              "spacing": "None",
              "minHeight": "24px",
              "items": [
                {
                  "type": "Image",
                  "style": "Default",
                  "url": "{logo}",
                  "size": "Small"
                }
              ],
              "width": "auto"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Hi, I'm Kronos WFC Bot and I can help you manage your shifts, time off requests, show your schedule, overtime hours.",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "Here are some of the things that I can do:\n - When am I working this week?\n- When is my next vacation?\n- Who is not here from my team?\n - Who is approaching overtime from my team?"
                },
                {
                  "type": "TextBlock",
                  "text": "Ready to get started? Sign in!"
                }

              ],
              "width": "stretch"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Sign In",
      "data": {
        "msteams": {
          "type": "messageBack",
          "text": "{Sign In}"
        }
      }
    },
    {
      "type": "Action.Submit",
      "title": "Take Tour",
      "data": {
        "msteams": {
          "type": "messageBack",
          "text": "{Take Tour}"
        }
      }
    },
 
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}