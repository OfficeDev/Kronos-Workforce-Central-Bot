{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Large",
          "weight": "Bolder",
          "text": "{Title}"
        },
        {
          "type": "TextBlock",
          "spacing": "None",
          "weight": "Bolder",
          "text": "{Info}",
          "isSubtle": true
        },        
        {
          "type": "ColumnSet",
          "spacing": "Medium",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "spacing": "Small",
                  "text": "{Status_txt} :",
                  "wrap": true
                }
              ],
              "width": "2"
            },
            {
              "type": "Column",
              "spacing": "Small",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Status}",
                  "color": "{Color}",
                  "wrap": true
                }
              ],
              "width": "5"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "None",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "spacing": "Small",
                  "text": "{Employee_txt} :",
                  "wrap": true
                }
              ],
              "width": "2"
            },
            {
              "type": "Column",
              "spacing": "Small",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Employee}",
                  "wrap": true
                }
              ],
              "width": "5"
            }
          ]
        },        
        {
          "type": "ColumnSet",
          "spacing": "None",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "spacing": "Small",
                  "text": "{Paycode_txt} :",
                  "wrap": true
                }
              ],
              "width": "2"
            },
            {
              "type": "Column",
              "spacing": "Small",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{PayCode}",
                  "wrap": true
                }
              ],
              "width": "5"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "None",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "spacing": "Small",
                  "text": "{Date_txt} :",
                  "wrap": true
                }
              ],
              "width": "2"
            },
            {
              "type": "Column",
              "spacing": "Small",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Date}",
                  "wrap": true
                }
              ],
              "width": "5"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "None",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "spacing": "Small",
                  "text": "{TimePeriod} :",
                  "wrap": true
                }
              ],
              "width": "2"
            },
            {
              "type": "Column",
              "spacing": "Small",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{TimePeriod}",
                  "wrap": true
                }
              ],
              "width": "5"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "None",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "spacing": "Small",
                  "text": "{Note_txt} :",
                  "wrap": true
                }
              ],
              "width": "2"
            },
            {
              "type": "Column",
              "spacing": "Small",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Note}",
                  "wrap": true
                }
              ],
              "width": "5"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "{ShowHistory}",
      "card": {
        "type": "AdaptiveCard",
        "style": "emphasis",
        "body": [
          {rows}
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}