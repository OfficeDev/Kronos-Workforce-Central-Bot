{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Large",
            "weight": "Bolder",
            "text": "{Title}"
        },
      {
        "type": "TextBlock",
        "spacing": "Medium",
        "weight": "Bolder",
        "text": "{StartTime}: "
      },
      {
        "type": "Input.Time",
        "id": "StartTime",
        "spacing": "Small",
        "title": "New Input.Toggle",
        "value": "{sTime}"
      },
      {
        "type": "TextBlock",
        "spacing": "Medium",
        "weight": "Bolder",
        "text": "{EndTime}: "
      },
      {
        "type": "Input.Time",
        "id": "EndTime",
        "spacing": "Small",
        "title": "New Input.Toggle",
